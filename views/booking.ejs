<!DOCTYPE html>
<html lang="en">

<head>
    <!-- meta tags for compatibility, acessibility and SEO -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- setting up the title of the page -->
    <title>
        <%= title %>
    </title>
    <!-- including oswald font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/site.css">
</head>

<body>
    <div class="boarding-wrapper">
        <!-- rendering header partial -->
        <%- include('./partials/_header.ejs') %>

            <!-- main content for booking page and using EJS to show dynamic stuff -->

            <main>
                <div class="booking-service section-space">
                    <div class="container">
                        <h1 class="center">Booking</h1>
                        <div class="card-content">
                            <div class="form">
                                <form action="/booking" method="post">

                                    <div class="form-field">
                                        <label for="username">Username</label>
                                        <input class="input" type="text" name="username" id="username" required
                                            autofocus>
                                    </div>

                                    <div class="form-field">
                                        <label for="email">Email</label>
                                        <input class="input" type="email" name="email" id="email" required>
                                    </div>

                                    <div class="form-field">
                                        <label for="firstName">First Name</label>
                                        <input class="input" type="text" name="firstName" id="firstName" required
                                            autofocus>
                                    </div>

                                    <div class="form-field">
                                        <label for="lastName">Last Name</label>
                                        <input class="input" type="text" name="lastName" id="lastName" required>
                                    </div>

                                    <div class="form-field">
                                        <label for="service">Service Option</label>
                                        <select name="service" id="service" class="drop-down-menu full-width" required>
                                            <% services.forEach((service)=> { %>
                                                <option value="'<%= service.value %>'">
                                                    <%= service.text %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>

                                    <div class="form-field">
                                        <input type="submit" value="Submit Order" class="btn btn-primary full-width">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <!-- rendering footer partial -->
            <%- include('./partials/_footer.ejs') %>
    </div>

</body>

</html>