<!DOCTYPE html>
<html lang="en">

<head>
    <!-- meta tags for compatibility, acessibility and SEO -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- setting up the title of the page -->
    <title>
        <%= title %>
    </title>
    <!-- including oswald font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/site.css">
</head>

<body>
    <div class="boarding-wrapper">
        <!-- rendering header partial -->
        <%- include('./partials/_header.ejs') %>

            <!-- main content for training page and using EJS to show dynamic stuff -->
            <main>
                <div class="training-hero hero-section section-space">
                    <div class="container">
                        <div class="hero-content">
                            <div class="hero-left">
                                <h1>
                                    <%= title %>
                                </h1>
                                <p>
                                    <%= description %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="customers-list section-space">
                    <div class="container">
                        <div class="customers-list-header">
                            <h1>Customers List</h1>
                            <div class="customers-content center">
                                <% if(customers.length > 0) { %>
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                        <tbody>
                                            <!-- looping through all the customers and rendering them in a atbale -->
                                        <% customers.forEach(function(customer) { %>
                                        <tr>
                                            <td>
                                                <%= customer.customerId %>
                                            </td>
                                            <td>
                                                <%= customer.email %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                    <h3>Customers have not been added to the MongoDB database.  Try adding some!</h3>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <!-- rendering footer partial -->
            <%- include('./partials/_footer.ejs') %>
    </div>

</body>

</html>